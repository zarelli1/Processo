{
  "youtube_api": {
    "client_id": "YOUR_CLIENT_ID_HERE",
    "client_secret": "YOUR_CLIENT_SECRET_HERE",
    "redirect_uri": "http://localhost:8080/oauth2callback",
    "scopes": ["https://www.googleapis.com/auth/youtube.upload"]
  },
  "channel_info": {
    "name": "YOUR_CHANNEL_NAME",
    "url": "https://www.youtube.com/@YOUR_CHANNEL",
    "owner": true
  },
  "directories": {
    "downloads": "./downloads",
    "shorts": "./shorts",
    "logs": "./logs",
    "config": "./config",
    "temp": "./temp"
  },
  "shorts_config": {
    "duration": 60,
    "resolution": "720x1280",
    "fps": 30,
    "bitrate": "1.5M",
    "audio_bitrate": "128k",
    "count_per_video": 7
  },
  "upload_schedule": {
    "time": "07:00",
    "timezone": "America/Sao_Paulo",
    "daily": true
  },
  "hashtags": [
    "#IA",
    "#tech",
    "#automacao",
    "#shorts"
  ],
  "processing": {
    "max_concurrent": 2,
    "temp_dir": "./temp",
    "quality": "medium"
  },
  "logging": {
    "level": "INFO",
    "file": "./logs/automation.log",
    "max_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}